{
  "name": "web-app-seed",
  "version": "1.0.0",
  "description": "seed for a new web app",
  "main": "server/startup.js",
  "scripts": {
    "build": "npm run build-server && npm run build-web-app",
    "build-web-app": "npm run build-web-app-images && npm run build-web-app-typescript && npm run build-web-app-sass",
    "build-web-app-images": "imagemin public/src/images/**/*.* --out-dir=public/dist/images",
    "build-web-app-typescript": "webpack --optimize-minimize",
    "build-web-app-sass": "node-sass --output-style compressed --include-path scss public/src/styles/styles.scss public/dist/styles/styles.css",
    "build-server": "tsc -p ./server",
    "dev": "npm run build-server && npm-run-all --parallel  start-web-server dev-web-app",
    "dev-web-app": "npm-run-all --parallel build-web-app-images dev-web-app-typescript dev-web-app-sass",
    "dev-web-app-typescript": "webpack --watch --devtool source-map",
    "dev-web-app-sass": "node-sass --watch --include-path scss public/src/styles/styles.scss public/dist/styles/styles.css",
    "pretest": "npm run build-unit-tests",
    "build-unit-tests": "tsc -p ./test/unit-tests",
    "review": "npm run review-typescript & npm run review-sass",
    "review-typescript": "tslint \"**/*.ts\" \"**/*.tsx\" --exclude \"**/*.d.ts\" --exclude \"node_modules/**/*.*\"",
    "review-sass": "sass-lint \"**/*.scss\" --ignore \"node_modules/**/*.*\"",
    "test": "npm run review && npm run unit-tests",
    "unit-tests": "alsatian \"./test/unit-tests/**/*.spec.js\"",
    "prestart": "npm run build",
    "start-web-server": "node server/startup.js",
    "start": "npm run start-web-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesrichford/web-app-seed.git"
  },
  "author": "James Richford <=> (=)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesrichford/web-app-seed/issues"
  },
  "homepage": "https://github.com/jamesrichford/web-app-seed#readme",
  "devDependencies": {
    "@types/express": "^4.0.34",
    "@types/node": "^6.0.52",
    "@types/serve-static": "^1.7.31",
    "alsatian": "^1.0.0-beta.4",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.0.0",
    "npm-run-all": "^4.0.1",
    "sass-lint": "^1.10.2",
    "ts-loader": "^2.0.0",
    "tslint": "^4.1.1",
    "typescript": "^2.1.4",
    "webpack": "^2.2.0"
  },
  "dependencies": {
    "express": "^4.14.0",
    "serve-static": "^1.11.1"
  }
}
